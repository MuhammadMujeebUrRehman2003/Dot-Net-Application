@model Maju.Models.Student


@{
    ViewData["Title"] = "Edit";
}

<style>
    /* Center-align all content */
    .content-container {
        text-align: center;
        background-color: lightgreen; /* Light pink background color */
        padding: 20px; /* Add padding for better presentation */
        border-radius: 5px; /* Add border radius for rounded corners */
    }
</style>

<div class="content-container">
    <h1 style="color: orange;">Edit</h1>

    <h4 style="color: green;">Student</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger" style="color: green;"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label" style="color: blue;"></label>
                    <input asp-for="Name" class="form-control" style="color: green;" />
                    <span asp-validation-for="Name" class="text-danger" style="color: blue;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Program" class="control-label" style="color: blue;"></label>
                    <input asp-for="Program" class="form-control" style="color: green;" />
                    <span asp-validation-for="Program" class="text-danger" style="color: blue;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Department" class="control-label" style="color: blue;"></label>
                    <input asp-for="Department" class="form-control" style="color: green;" />
                    <span asp-validation-for="Department" class="text-danger" style="color: blue;"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fee" class="control-label" style="color: blue;"></label>
                    <input asp-for="Fee" class="form-control" style="color: green;" />
                    <span asp-validation-for="Fee" class="text-danger" style="color: blue;"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary animated-button" style="color: white;" />
                    <a asp-action="Index" class="btn btn-primary orange-background" style="color: white;">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Button color change animation */
    .animated-button {
        transition: background-color 0.5s ease;
    }

    /* Change background color of the button on hover */
    .animated-button:hover {
        background-color: lightblue;
    }

    /* Custom color for button background */
    .orange-background {
        background-color: orange;
    }
</style>
