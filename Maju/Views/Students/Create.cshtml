@model Maju.Models.Student

@{
    ViewData["Title"] = "Create";
}

<style>
    /* Styling for the form container */
    .form-container {
        background-color: #f0f0f0; /* Light gray background color */
        padding: 30px; /* Increased padding for better presentation */
        border-radius: 10px; /* Add border radius for rounded corners */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle shadow effect */
    }
</style>

<div class="text-center">
    <h1 style="color: Pink;">Create</h1>

    <h4 style="color: Green;">Student</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-container">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger" style="color: orange;"></div>
                    <div class="form-group">
                        <label asp-for="Id" class="control-label" style="color: orange;"></label>
                        <input asp-for="Id" class="form-control" style="color: red;" />
                        <span asp-validation-for="Id" class="text-danger" style="color: orange;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label" style="color: orange;"></label>
                        <input asp-for="Name" class="form-control" style="color: red;" />
                        <span asp-validation-for="Name" class="text-danger" style="color: orange;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Program" class="control-label" style="color: orange;"></label>
                        <input asp-for="Program" class="form-control" style="color: red;" />
                        <span asp-validation-for="Program" class="text-danger" style="color: orange;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Department" class="control-label" style="color: orange;"></label>
                        <input asp-for="Department" class="form-control" style="color: red;" />
                        <span asp-validation-for="Department" class="text-danger" style="color: orange;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fee" class="control-label" style="color: orange;"></label>
                        <input asp-for="Fee" class="form-control" style="color: red;" />
                        <span asp-validation-for="Fee" class="text-danger" style="color: orange;"></span>
                    </div>
                    <br>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary orange-background" />
                        <a asp-action="Index" class="btn btn-primary orange-background">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .orange-background {
        background-color: orange;
    }
</style>