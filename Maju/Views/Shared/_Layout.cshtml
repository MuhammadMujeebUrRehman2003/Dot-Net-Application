<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Maju</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Maju.styles.css" asp-append-version="true" />

    <style>
        /* Navbar button background colors */
        .navbar-nav .nav-item .nav-link {
            background-color: pink;
            color: black; /* Text color */
            padding: 8px 12px; /* Adjust padding */
            margin-right: 3px; /* Create space between buttons */
            transition: background-color 0.5s, transform 0.5s; /* Smooth transition for color change and scaling */
        }

        .navbar-nav .nav-item .nav-link:hover {
            background-color: lightgreen; /* Change background color on hover */
            filter: brightness(85%); /* Darken color on hover */
            transform: scale(1.1); /* Increase size on hover */
        }

        /* Main heading text color */
        .navbar-brand {
            color: orange; /* Text color */
            transition: color 0.3s; /* Transition effect */
        }

        /* Custom class for button color transition */
        .custom-button {
            background-color: lightblue; /* Initial background color */
            transition: background-color 0.5s; /* Smooth transition for color change */
        }

        .custom-button:hover {
            background-color: purple; /* Change background color on hover */
            color: white; /* Text color on hover */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="background-color: skyblue; padding: 5px 10px; border-radius: 3px;">Maju</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Maju - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
